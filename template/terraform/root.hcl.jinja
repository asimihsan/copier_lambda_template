remote_state {
  backend = "s3"
  config = {
    bucket         = "{{ project_name_hyphens }}-terraform-state-bucket-{{ random_suffix }}"
    key            = "${path_relative_to_include()}/terraform.tfstate"
    region         = "us-west-2"
    encrypt        = true
    dynamodb_table = "{{ project_name_hyphens }}-terraform-lock-table-{{ random_suffix }}"
  }
}
